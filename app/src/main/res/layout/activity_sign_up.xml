<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/update">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="600dp"
        android:id="@+id/scrollview_sign_up">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/purple_700">

                <TextView
                    android:id="@+id/textview_sign_up_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="50dp"
                    android:layout_marginEnd="50dp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center"
                    android:text="@string/sign_up"
                    style="@style/Theme.AppCompat"
                    android:textSize="35sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edittext_sign_up_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textview_sign_up_title"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="20dp"
                    android:hint="@string/username"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_sign_up_full_name"
                    android:layout_below="@id/edittext_sign_up_username"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:hint="@string/full_name"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:padding="13dp"
                    android:textSize="25sp"
                    android:drawableStart="@drawable/baseline_person_24"
                    android:drawablePadding="20dp"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/edittext_sign_up_password"
                    android:layout_below="@id/edittext_sign_up_full_name"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:hint="@string/password"
                    android:textColorHint="@color/black"
                    android:textColor="@color/black"
                    android:layout_margin="10dp"
                    android:padding="13dp"
                    android:textSize="25sp"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="20dp"
                    android:inputType="textPassword"/>

                <EditText
                    android:id="@+id/edittext_sign_up_confirm_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittext_sign_up_password"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:drawableStart="@drawable/baseline_lock_24"
                    android:drawablePadding="20dp"
                    android:hint="@string/confirm_password"
                    android:inputType="textPassword"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp" />

                <EditText
                    android:id="@+id/edittext_sign_up_major"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/edittext_sign_up_confirm_password"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:drawableStart="@drawable/baseline_school_24"
                    android:drawablePadding="20dp"
                    android:hint="@string/major"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp" />

                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/edittext_sign_up_major"
                    android:id="@+id/spinner_sign_up_year"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="50dp"
                    android:dropDownSelector="@color/black"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    />

                <EditText
                    android:id="@+id/edittext_sign_up_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/spinner_sign_up_year"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="10dp"
                    android:background="@drawable/roundstyle"
                    android:backgroundTint="#A5D2FC"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawablePadding="20dp"
                    android:hint="@string/email"
                    android:padding="13dp"
                    android:textColor="@color/black"
                    android:textColorHint="@color/black"
                    android:textSize="25sp" />


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialbutton_sign_up_signup"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@id/scrollview_sign_up"
        android:layout_marginStart="70dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#5766ED"
        android:text="@string/sign_up"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="25dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/materialbutton_sign_up_cancel"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_below="@id/scrollview_sign_up"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:layout_toEndOf="@+id/materialbutton_sign_up_signup"
        android:backgroundTint="#5766ED"
        android:text="@string/cancel"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:cornerRadius="25dp" />
</RelativeLayout>